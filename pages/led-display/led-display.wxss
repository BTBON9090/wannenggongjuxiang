/* 定义无缝滚动动画 */
@keyframes seamless-scroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* 定义五彩闪烁动画 */
@keyframes color-flash {
  0% { color: red; }
  15% { color: orange; }
  30% { color: yellow; }
  45% { color: green; }
  60% { color: cyan; }
  75% { color: blue; }
  90% { color: purple; }
  100% { color: red; }
}

.fullscreen-container {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  display: flex;
  align-items: center;
  overflow: hidden;
  transform: translate(-50%, -50%);
}

.fullscreen-container.landscape {
  width: 100vh;
  height: 100vw;
  transform: translate(-50%, -50%) rotate(90deg);
}

.marquee-parent {
  display: flex;
  width: max-content;
  /* 动画不再写死在这里，由JS控制 */
}

.text-instance {
  font-weight: bold;
  white-space: nowrap;
}
