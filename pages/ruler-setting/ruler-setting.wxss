/* pages/ruler-setting/ruler-setting.wxss */
page { 
  height: 100%;
  background-color: #f0f2f5;
  overflow: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
}

.resizable-box-container { /* 新增一个容器用于对齐 */
  flex-grow: 1;
  width: 100%;
  display: flex;
  align-items: flex-start; /* 改为顶部对齐 */
  justify-content: center;
}

.resizable-box {
  width: 100%;
  background-color: rgba(0, 140, 255, 0.1);
  border: 2rpx solid rgba(0, 140, 255, 0.5);
  border-radius: 20rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: rgba(0, 140, 255, 0.8);
}

.instructions {
  font-size: 32rpx;
  line-height: 1.6;
}
.instructions-sub {
  font-size: 26rpx;
  opacity: 0.7;
}

.handle-dragger {
  position: absolute;
  bottom: -40rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: ns-resize;
}

.handle-visual {
  width: 80rpx;
  height: 12rpx;
  background-color: rgba(0, 140, 255, 0.5);
  border-radius: 6rpx;
}

.button-group {
  padding-top: 40rpx;
  width: 100%;
  flex-shrink: 0; /* 防止按钮组被压缩 */
}

.save-btn { width: 100%; background-color: #008cff; color: white; }
.cancel-btn { width: 100%; background-color: #f0f0f0; color: #333; margin-top: 20rpx; }