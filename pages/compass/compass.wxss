/* pages/compass/compass.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #2c3e50;
  padding: 20rpx;
  box-sizing: border-box;
}

.compass-container {
  position: relative;
  width: 550rpx;
  height: 550rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 指针和表盘都使用绝对定位，确保它们在容器内完美重叠 */
.compass-dial,
.compass-pointer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.compass-pointer {
  /* 移除这里的CSS transition，因为我们改用JS动画控制 */
}

.direction-text {
  margin-top: 30rpx;
  font-size: 60rpx;
  color: white;
  font-weight: bold;
  text-align: center;
}

.geo-info-grid {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.info-item {
  text-align: center;
}

.info-value {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.info-label {
  font-size: 24rpx;
  color: #fff;
  opacity: 0.7;
  margin-top: 10rpx;
}

.location-btn {
  margin-top: 40rpx;
  width: 80%;
  background-color: #008cff;
  color: white;
}
